struct Entry {
  // inode
  ino: ulong (key);
  // page that holds the DirEntry for the node
  pageno: ushort;
}

struct Page {
  // page number
  pageno: ushort (key);
  // byte offset into the page section that tells us where this page begins
  page_offset: ulong;
  // size of the DirEntryPage in bytes
  page_size: ulong;
}

table Index {
  entries: [Entry] (required);
  pages: [Page] (required);
}

root_type Index;
